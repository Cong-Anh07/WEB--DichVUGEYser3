# NANOGEYSER WEBSITE CONFIGURATION EXAMPLE
# Copy this file to .env and update with your actual values
# =====================================

# ADMIN CREDENTIALS
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_NAME=Your Admin Name

# CUSTOMER DEMO ACCOUNT
CUSTOMER_USERNAME=customer
CUSTOMER_PASSWORD=customer123
CUSTOMER_EMAIL=customer@email.com
CUSTOMER_NAME=Demo Customer
CUSTOMER_PHONE=0901234567

# DATABASE CONFIGURATION
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nanogeyser_db
DB_USERNAME=db_user
DB_PASSWORD=db_password

# JWT CONFIGURATION
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# EMAIL CONFIGURATION
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_email_password

# COMPANY INFORMATION
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=Your Company Address
COMPANY_PHONE=Your Phone Number
COMPANY_EMAIL=info@yourdomain.com
COMPANY_WEBSITE=https://yourdomain.com

# PRODUCT CATEGORIES
PRODUCT_CATEGORIES=Pro,Basic,Premium,Standard

# SERVICE TYPES
SERVICE_MAINTENANCE=Bảo dưỡng định kỳ
SERVICE_REPAIR=Sửa chữa
SERVICE_WARRANTY=Bảo hành
SERVICE_INSTALLATION=Lắp đặt
SERVICE_CONSULTATION=Tư vấn

# PRICING (VND)
MAINTENANCE_PRICE=300000
REPAIR_BASE_PRICE=200000
INSTALLATION_PRICE=500000
CONSULTATION_PRICE=0

# SYSTEM SETTINGS
SESSION_TIMEOUT=30
MAX_LOGIN_ATTEMPTS=5
BACKUP_INTERVAL=24
LOG_LEVEL=info

# NOTIFICATION SETTINGS
SMS_API_KEY=your_sms_api_key
SMS_SENDER=YourBrand
EMAIL_NOTIFICATIONS=true
SMS_NOTIFICATIONS=true

# PAYMENT SETTINGS
PAYMENT_METHODS=cash,bank_transfer,credit_card
BANK_ACCOUNT=your_bank_account
BANK_NAME=Your Bank Name
BANK_BRANCH=Your Bank Branch